<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<link rel="icon" href="{{ asset('images/favicon-16x16.png') }}" type="image/png">
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
		<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
		<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>


		<title>
			{% block title %}
				Accueil
			{% endblock %}
		</title>

		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}

	</head>
	<body class="dark-mode hold-transition sidebar-mini layout-fixed min">
		<div class="wrapper">
			{# {% include 'fragments/_flash-messages.html.twig' %} #}

			{# <div class="preloader flex-column justify-content-center align-items-center"> <img class="animation__shake" src="https://upload.wikimedia.org/wikipedia/commons/thumb/a/a0/Firefox_logo%2C_2019.svg/115px-Firefox_logo%2C_2019.svg.png" alt="AdminLTELogo" height="60" width="60"> </div> #}

			{% include 'fragments/nav/_topbar.html.twig' %}
			{% include 'fragments/nav/_aside.html.twig' %}

				<div class="content-wrapper"> <section class="content mt-4 px-5">
					<div class="container-fluid p-0">
						<div class="card-body">

							<div class="my-2"> {% block body %}{% endblock %}
								</div>
							</section>
						</div>

						{% include 'fragments/footer/_footer.html.twig' %}

						{% if app.request.server.get('RIGHT_SIDEBAR') %}
							<aside class="control-sidebar control-sidebar-dark"></aside>
						{% endif %}
					</div>
				</div>
			</div>
		</body>
	</html>

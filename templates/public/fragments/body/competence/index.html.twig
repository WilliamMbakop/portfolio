{% extends 'public/base.html.twig' %}

{% block body %}

	<div class="card mb-5">
		<h4 class="my-4 ml-5"> Systèmes et réseaux </h4>
		<div class="card-body d-flex flex-column flex-md-row flex-wrap align-items-center justify-content-md-center justify-content-xl-start">
			{% set images = [
                {'src': 'images/sys-res/Linux.png', 'alt': 'Linux', 'name': 'Linux'},
                {'src': 'images/sys-res/Windows.png', 'alt': 'Windows', 'name': 'Windows'},

{% block body %}
	<div class="card mb-4 d-none d-md-block">
		<img class="card-img-top" src="{{ asset('images/presentation-img-1.jpg') }}" alt="Description de l'image">
		<div class="card-body pt-0 card-img-overlay d-flex align-items-center justify-content-center">
			<div class="row col-12 justify-content-center align-items-center">
				<div class="col-2 text-center mr-5">
					<img src="{{ vich_uploader_asset(presentation, 'imageFile') }}"
                             alt="Photo de {{presentation.name }}"
                             title="Photo de {{ presentation.name }}"
                             class="img-circle elevation-2 img-fluid"
                              style="max-width: 200px; max-height: 200px;">
				</div>
				<div class="col-6">
					<h2 class="lead text-warning">
						<b style="font-size: 18px;">
						 {% set strings = [
                presentation.name,
                presentation.job,
                presentation.passion
            ] %}
							<span data-controller="symfony--ux-typed" data-symfony--ux-typed-loop-value="true" data-symfony--ux-typed-show-cursor-value="true" data-symfony--ux-typed-cursor-char-value="|" data-symfony--ux-typed-strings-value="{{ strings|json_encode|e('html_attr') }}"></span>
						</b>
					</h2>
					<ul class="ml-0 mt-3 mb-0 fa-ul text-muted">
						{{ ux_icon('mdi:location', {height: '20px', width: '18px', 'aria-hidden': true}) }}
						{{presentation.localization}}
					</ul>
				</div>
			</div>
		</div>
	</div>
	<div class="card mb-4 d-block d-md-none">
		<img class="card-img-top" src="{{ asset('images/presentation-img-1.jpg') }}" alt="Description de l'image">
		<div class="card-body card-img-overlay d-flex align-items-center justify-content-center">
			<div class="row col-9 justify-content-center align-items-center">
				<div class="col-6 text-center">
					<img src="{{ vich_uploader_asset(presentation, 'imageFile') }}"
                             alt="Photo de {{presentation.name }}"
                             title="Photo de {{ presentation.name }}"
                             class="img-circle elevation-2 img-fluid"
							  style="max-width: 100px; max-height: 100px;"
                              >
				</div>
			</div>
		</div>
	</div>
	<div class="d-md-none">
		<h4 class="text-center mb-3 text-warning">
			William Mbakop
		</h4>
		<p style="font-size : 12px" class="text-center mb-2">
			Technicien supérieur Systèmes et Réseaux
		</p>
		<p style="font-size : 12px" class="text-center">
			Passionné de cybersécurité
		</p>
	</div>
	<div class="content px-2 mt-5">
		{{presentation.description | raw}}
	</div>
{% endblock %}
